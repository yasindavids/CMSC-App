@model IEnumerable<Claim>

<div id="welcome">
    <div class="dash">
        <span class="title">Claims</span>

        <div class="file-explorer">
            <div class="file-explorer">
                @foreach (var claim in Model)
                {
                    var totalPay = claim.HourlyRate * claim.HoursWorked;

                    <div class="file-item">
                        <span>Hours Worked: @claim.HoursWorked <br /></span>
                        <span>Hourly Rate: @claim.HourlyRate <br /></span>
                        <span>Additional Notes: @claim.Notes <br /></span>
                        <span>Total Pay: @totalPay <br /></span>
                        <a href="@Url.Content("~/uploads/" + claim.FileName)" target="_blank">Open Claim Notes</a>

                        <form method="post" asp-controller="Home" asp-action="DownloadReport" asp-route-id="@claim.Id">
                            <button class="btn" type="submit">Accept (Download Report)</button>
                        </form>
                        <form method="post" asp-controller="Home" asp-action="RejectClaim" asp-route-id="@claim.Id">
                            <button class="btn" type="submit">Reject (Delete)</button>
                        </form>
                    </div>
                }
            </div>
    </div>  
</div>



